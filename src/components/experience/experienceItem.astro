---
//
import SocialPill from '../utils/SocialPill.astro';

interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
  message?: string;
  button?: string;
}

const { title, description, link, date, message, button } = Astro.props;
---

<ol class="relative border-s border-purple-400/30 dark:border-purple-500/30">
  <li class="mb-10 ms-6">
    <span
      class="absolute flex items-center justify-center w-6 h-6 -start-3 rounded-full
         bg-gradient-to-br from-purple-500 via-purple-600 to-purple-700
         shadow-[0_0_10px_rgba(168,85,247,0.5)]
         ring-8 ring-transparent dark:ring-gray-900
         animate-pulse-slow"
    ></span>
    <h3
      class="flex items-center mb-1 text-lg font-semibold text-purple-500 mt-2"
    >
      {title}
      <span
        class="bg-purple-100 text-purple-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300 ms-3"
        >{message}</span
      >
    </h3>
    <time
      class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
      >{date}</time
    >

    <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
      {description}
    </p>

    {
      link && (
        <SocialPill href={link}>
          {button ? button : 'Ver proyecto'}
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </SocialPill>
      )
    }
  </li>
</ol>